#include <iostream>

using namespace std;

int main()
{
	int a, b, n;
	cout << "Enter n: ";
	cin >> n;
	cout << "Enter 1 element: ";
	cin >> a;
	int zmina = 0;
	for (int i = 1; i < n; i++)
	{
		cout << "Enter " << i + 1 << " element ";
		cin >> b;
		if (a < 0 && b>0)
		{

			zmina++;
		}
		if (a > 0 && b < 0)
		{

			zmina++;
		}
		a = b;

	}

	cout << zmina << endl;

	system("pause");
}
